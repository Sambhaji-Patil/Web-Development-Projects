<!-- edit_post.ejs -->
<%- include("partials/header.ejs") %>

<h1 style="text-align: center;">Edit Post</h1>

<div class="addpostcard">
    <form action="/edit/<%= post.id %>" method="post">
        <div class="form-group">
            <label>Title</label>
            <input class="form-control" type="text" name="postTitle" value="<%= post.title %>">
            <br>
            <label>Post</label>
            <br>
            <textarea class="form-control" name="postBody" rows="5" cols="30"><%= post.content %></textarea>
        </div>
        <button class="btn btn-primary" type="submit" name="button">Update</button>
    </form>
</div>

<%- include("partials/footer.ejs") %>
